<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title><%= product.name %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      body {
        background: #f7f7fa;
        font-family: 'Segoe UI', Arial, sans-serif;
      }
      .container {
        max-width: 480px;
        margin: 48px auto;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        padding: 32px 28px 24px 28px;
      }
      h1 {
        text-align: center;
        color: #2563eb;
        margin-bottom: 28px;
      }
      .product-meta {
        color: #64748b;
        font-size: 16px;
        margin-bottom: 18px;
        text-align: center;
      }
      .btn-danger {
        background: #ef4444;
        border: none;
        border-radius: 4px;
        padding: 10px 24px;
        font-size: 16px;
        width: 100%;
        margin-top: 8px;
      }
      .btn-danger:hover {
        background: #b91c1c;
      }
      .back-link {
        display: block;
        text-align: center;
        margin-top: 18px;
        color: #64748b;
        text-decoration: none;
      }
      .back-link:hover {
        color: #2563eb;
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1><%= product.name %></h1>
      <div class="product-meta">
        <div>SKU: <%= product.sku %></div>
        <div>Quantity: <span style="color:#2563eb;font-weight:500;"> <%= product.quantity %> </span></div>
        <div>Weight: <span style="color:#2563eb;font-weight:500;"> <%= product.weight != null ? product.weight : 0 %> </span> kg</div>
        <div>Location: <%= product.location || 'â€”' %></div>
      </div>
      <form id="deleteForm" action="/products/<%= product._id %>/delete" method="post">
        <button type="submit" class="btn btn-danger">Delete Product</button>
      </form>
      <script>
        document.getElementById('deleteForm').addEventListener('submit', async function(e) {
          e.preventDefault();
          if (!confirm('Delete product?')) return;
          const resp = await fetch(this.action, { method: 'POST' });
          if (resp.ok) {
            window.location.href = '/dashboard.html';
          } else {
            alert('Error deleting product.');
          }
        });
      </script>
      <a href="/dashboard.html" class="btn btn-secondary w-100 mb-2">&#8962; Home</a>
      <a href="/products" class="back-link">&#8592; Back to Products</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      const socket = io();
      socket.on('productCreated', function(product) {
        // Reload page or fetch products to update UI
        location.reload();
      });
      socket.on('productDeleted', function(data) {
        location.reload();
      });
    </script>
  </body>
</html>
